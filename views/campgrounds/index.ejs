<% include ../partial/header %>

 <div class="container m-2">
	<header class = "jumbotron">
			<div class="container">
		<h1>
			Welcome to Yelpcamp!</h1>
			<p>View our hand-picked campgrounds fromm all over the world</p>
			<p>
				<a class = "btn btn-primary btn-lg" href="/campgrounds/new"> Add New Campgrounds </a> </p>
		
			</div>
     </header>

	 

<div class= "row text-center" id="campground-grid">
	
<% campgrounds.forEach(function(campground){ %>
	<div class= "col-md-3 col-sm-6">
		<div class="card">
			<img class ="card-img-top" src= "<%= campground.image %>" >
			
			<div class="card-body">
					<h4 class="card-title"><%= campground.name %>	</h4>
		
			<a href="/campgrounds/<%= campground._id %>" class ="btn btn-primary"> More Info</a>			
		
			</div>
	    </div>
	</div>
	
<% });  %> 
	
 </div>
	 </div>

	<% include ../partial/footer %>